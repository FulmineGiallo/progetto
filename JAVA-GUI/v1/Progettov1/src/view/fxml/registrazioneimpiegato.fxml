<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="RegistrazioneImpiegato" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="1000.0" prefWidth="650.0" styleClass="RegistrazioneImpiegato" stylesheets="@../../css/RegistrazioneImpiegato.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox fx:id="Form" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <VBox fx:id="DescrizioneBox" spacing="3.0">
               <children>
                  <Label fx:id="DescrizioneLabel" styleClass="DescrizioneLabel" text="Inserisci qui i tuoi dati" />
                  <Label fx:id="DescrizioneLabel2" styleClass="DescrizioneLabel2" text="* Campo obbligatorio" />
               </children>
            </VBox>
            <VBox fx:id="NomeBox" prefHeight="45.0" spacing="3.0">
				<children>
                  <Label fx:id="NomeLabel" text="* Nome" visible="false" />
                  <TextField fx:id="NomeTF" prefWidth="223.0" promptText="* Nome" styleClass="NomeTF" />
                  <Label fx:id="NomeErrorLabel" styleClass="NomeErrorLabel" textFill="RED" />
               </children>
            </VBox>
            <VBox fx:id="CognomeBox" prefHeight="45.0">
               <children>
                  <TextField fx:id="CognomeTF" prefWidth="223.0" promptText="* Cognome" styleClass="NomeTF" />
                  <Label fx:id="CognomeErrorLabel" styleClass="CognomeErrorLabel" textFill="RED" />
               </children>
            </VBox>
            <VBox fx:id="GenereBox" prefHeight="45.0" spacing="3.0">
               <children>
                  <HBox prefHeight="30.0" spacing="10.0">
                     <children>
                        <Label fx:id="GenereLabel" prefHeight="30.0" prefWidth="56.0" styleClass="GenereLabel" text="* Genere" />
                        <HBox fx:id="GenereRBBox" alignment="CENTER" spacing="30.0">
                           <children>
                              <RadioButton fx:id="GenereRB1" mnemonicParsing="false" prefHeight="30.0" styleClass="GenereRB1" text="Uomo">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="Genere" />
                                 </toggleGroup>
                              </RadioButton>
                              <RadioButton fx:id="GenereRB2" mnemonicParsing="false" prefHeight="30.0" styleClass="GenereRB2" text="Donna" toggleGroup="$Genere" />
                           </children></HBox>
                     </children>
                  </HBox>
                  <Label fx:id="GenereErrorLabel" styleClass="GenereErrorLabel" />
               </children>
            </VBox>
            <VBox fx:id="DataDiNascitaBox" prefHeight="45.0" prefWidth="400.0">
               <children>
                  <HBox spacing="10.0">
                     <children>
                        <Label fx:id="DataDiNascitaLabel" prefHeight="30.0" prefWidth="104.0" styleClass="DataDiNascitaLabel" text="* Data di nascita" />
                        <DatePicker fx:id="DataDiNascitaDP" editable="false" prefHeight="30.0" styleClass="DataDiNascitaDP" />
                     </children>
                  </HBox>
                  <Label fx:id="DataDiNascitaErrorLabel" styleClass="DataDiNascitaErrorLabel" />
               </children>
            </VBox>
            <HBox fx:id="ComuneDiNascitaBox" prefHeight="45.0" spacing="10.0">
               <children>
      			<VBox>
                     <children>
                        <Label fx:id="ComuneLabel" styleClass="ComuneLabel" text="* Comune di nascita:" />
                        <ListView fx:id="ComuneLV" maxWidth="290.0" prefWidth="290.0" styleClass="ComuneLV" />
                     </children>
                  </VBox>
                  <VBox>
                     <children>
                        <Label fx:id="ProvinciaLabel" styleClass="ProvinciaLabel" text="* Provincia di nascita" visible="false" />
                        <TextField fx:id="ProvinciaTF" maxWidth="165.0" prefWidth="165.0" promptText="* Provincia di nascita" styleClass="ProvinciaTF" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <HBox spacing="100.0">
               <children>
                  <Button fx:id="AnnullaButton" mnemonicParsing="false" text="Annulla registrazione" />
                  <Button fx:id="ConfermaButton" mnemonicParsing="false" text="Conferma registrazione" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets right="50.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="100.0" top="100.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets left="100.0" right="100.0" />
   </padding>
</AnchorPane>
