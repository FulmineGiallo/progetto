<AnchorPane fx:id="Login" prefHeight="450.0" prefWidth="850.0" styleClass="ConfermaRegistrazioneImpiegato" stylesheets="@../../css/login.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ControllerLogin">
   <children>
      <Label fx:id="TitoloLabel" alignment="CENTER" layoutX="20.0" layoutY="10.0" styleClass="DescrizioneLabel" text="Login" textAlignment="CENTER" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="10.0">
         <graphic>
            <ImageView fitHeight="75.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../resources/img/login.png" />
               </image>
            </ImageView>
         </graphic>
      </Label>
      <VBox alignment="CENTER" layoutX="200.0" layoutY="100.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="200.0" AnchorPane.rightAnchor="200.0" AnchorPane.topAnchor="100.0">
         <children>
            <HBox alignment="CENTER">
               <children>
                  <GridPane fx:id="Form" styleClass="Form">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="175.0" minWidth="175.0" />
                        <ColumnConstraints hgrow="SOMETIMES" maxWidth="250.0" minWidth="250.0" />
                     </columnConstraints>
                     <rowConstraints>
                        <RowConstraints maxHeight="100.0" minHeight="100.0" vgrow="SOMETIMES" />
                        <RowConstraints maxHeight="100.0" minHeight="100.0" vgrow="SOMETIMES" />
                     </rowConstraints>
                     <children>
                        <Label fx:id="EmailLabel" styleClass="EmailLabel" text="Email" GridPane.hgrow="NEVER" GridPane.vgrow="NEVER">
                           <graphic>
                              <ImageView fx:id="EmailIV" fitHeight="75.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../resources/img/email.png" />
                                 </image>
                                 <viewport>
                                    <Rectangle2D />
                                 </viewport>
                              </ImageView>
                           </graphic>
                           <GridPane.margin>
                              <Insets />
                           </GridPane.margin>
                        </Label>
                        <TextField fx:id="EmailTF" styleClass="EmailTF" GridPane.columnIndex="1" GridPane.hgrow="NEVER" GridPane.vgrow="NEVER" />
                        <Label fx:id="PasswordLabel" styleClass="PasswordLabel" text="Password" GridPane.hgrow="NEVER" GridPane.rowIndex="1" GridPane.vgrow="NEVER">
                           <graphic>
                              <ImageView fx:id="PasswordIV" fitHeight="75.0" fitWidth="75.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../resources/img/password.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                           <GridPane.margin>
                              <Insets />
                           </GridPane.margin>
                        </Label>
                        <TextField fx:id="PasswordTF" styleClass="PasswordTF" GridPane.columnIndex="1" GridPane.hgrow="NEVER" GridPane.rowIndex="1" GridPane.vgrow="NEVER" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </GridPane>
               </children>
            </HBox>
         </children>
      </VBox>
      <AnchorPane fx:id="ButtonBar" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Button fx:id="AnnullaButton" alignment="CENTER" focusTraversable="false" layoutX="35.0" maxWidth="178.0" minWidth="178.0" mnemonicParsing="false" onAction="#backHomePageBenvenuto" prefHeight="45.0" styleClass="AnnullaButton" text="Annulla" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="25.0">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="ConfermaButton" alignment="CENTER" focusTraversable="false" maxWidth="178.0" minWidth="178.0" mnemonicParsing="false" onAction="#checkLogin" prefHeight="45.0" styleClass="AccediButton" text="Accedi" AnchorPane.bottomAnchor="0.0" AnchorPane.rightAnchor="25.0">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
